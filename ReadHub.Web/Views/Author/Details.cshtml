@using ReadHub.Core.Services.Author.Models;

@model AuthorDetailsModel

@{
	ViewBag.Title = "Author Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
	<div class="row">
		<div class="card col-8 border-0">
			<p style="font-size:25px;"><u>@Model.FirstName @Model.LastName</u></p>
		</div>
	</div>
</div>

<div class="row">
	@foreach (var book in Model.Books)
	{
		<partial name="_AuthorBookPartial" model="@book" />
	}
</div>